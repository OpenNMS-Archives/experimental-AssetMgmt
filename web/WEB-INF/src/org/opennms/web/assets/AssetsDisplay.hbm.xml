<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >
    
<hibernate-mapping>
<!-- 
	This mapping represents the columns to display
	when displaying all assets.
-->

<class 
    name="org.opennms.web.assets.AssetsDisplay" 
    table="assets"
>

    <id
        name="pos"
        type="int"
        column="pos"
    >
        <generator class="native" />
    </id>

    <property
        name="assetField"
        type="java.lang.String"
        column="asset_field"
        length="64"
    />
    <property
        name="fieldHeader"
        type="java.lang.String"
        column="field_header"
        length="64"
    />

    <!-- associations -->

</class>
</hibernate-mapping>
